{
  "name": "dehub-lottery-smart-contract",
  "version": "1.0.0",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile --force",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network testnet",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "upgrade-standard-v2:testnet": "npx hardhat run scripts/deploy-standard-upgrade.js --network testnet",
    "upgrade-standard-v2:mainnet": "npx hardhat run scripts/deploy-standard-upgrade.js --network mainnet",
    "upgrade-special-v2:testnet": "npx hardhat run scripts/deploy-special-upgrade.js --network testnet",
    "upgrade-special-v2:mainnet": "npx hardhat run scripts/deploy-special-upgrade.js --network mainnet",
    "upgrade-special-v3:testnet": "npx hardhat run scripts/deploy-special-upgrade-v3.js --network testnet",
    "upgrade-special-v3:mainnet": "npx hardhat run scripts/deploy-special-upgrade-v3.js --network mainnet",
    "fork:testnet": "npx hardhat node --fork $(dotenv -p MORALIS_BSC_TESTNET_ARCHIVE_URL) --fork-block-number 12585457",
    "fork:mainnet": "npx hardhat node --fork $(dotenv -p MORALIS_BSC_MAINNET_ARCHIVE_URL) --fork-block-number 11134446"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@openzeppelin/test-helpers": "^0.5.13",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.4",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "sol-merger": "^3.1.0",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
